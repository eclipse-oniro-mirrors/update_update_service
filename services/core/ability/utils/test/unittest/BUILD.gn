import("//build/test.gni")

module_output_path = "updateservice/core_ability"
config("module_private_config") {
  visibility = [ ":*" ]
  include_dirs = []
}

ohos_unittest("CoreAbilityUtilsTest") {
  module_out_path = module_output_path
  include_dirs = sa_include_dirs
